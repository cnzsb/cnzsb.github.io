$siteAColor = #19CAAD
$siteABgColor = #19CAAD
$siteDescColor = #9e9e9e

header
  line-height 1.8rem

  .site-branding
    text-align center
    margin-bottom 2rem
    font-family "Open Sans", arial, sans-serif
    letter-spacing 0.1em
    text-transform uppercase

    .site-title
      margin 0
      font-size 2.5rem

      a
        display inline-flex
        justify-content center
        align-items center
        color $siteAColor
        font-weight bolder

        img
          width 2em
          height 2em
          margin-right 0.5em
          border-radius 50%
          transition margin 0.3s ease-out

        &:hover img
          margin-right 0.8em

    .site-description
      color $siteDescColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation
    text-align center

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteABgColor
          font-size 1.6rem
          line-height 2rem
          padding 0 1rem

  .contact-me ul li a
    padding 0.5rem 1rem
